@{ 
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewData["Title"] = "Add Resto Reviews";
}
@model asp_identity_core_ef.ViewModels.RestoReviewViewModel

<h2>Add a review for a resto</h2>

<form method="post" asp-controlller="RestoReview" asp-action="Review">
    <div class="form-group">
        <label asp-for="RestoName"></label>
        <input asp-for="RestoName" class="form-control" />
        <span asp-validation-for="RestoName" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewContent"></label>
        <textarea asp-for="ReviewContent" cols="30" rows="10" class="form-control"></textarea>
        <span asp-validation-for="ReviewContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateVisited"></label>
        <input asp-for="DateVisited" class="form-control" />
        <span asp-validation-for="DateVisited" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Review">
    </div>
</form>