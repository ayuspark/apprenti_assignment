@{ Layout = "~/Views/Shared/_Layout.cshtml"; 
   ViewData["Title"] = "Register";
}
@model asp_identity_core_ef.ViewModels.RegisterViewModel

<h2>Registration Page</h2>

<form asp-controller = "Account" asp-action = "Register" method="post">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-field">
        <label asp-for="FName"></label>
        <input asp-for="FName" class="validate" />
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>
    <div class="input-field">
        <label asp-for="LName"></label>
        <input asp-for="LName" class="validate" />
        <span asp-validation-for="LName" class="text-danger"></span>
    </div>
    <div class="input-field">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="validate" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="input-field">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="validate" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="input-field">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="validate" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="input-field">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" class="validate" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Register</button>
</form>


