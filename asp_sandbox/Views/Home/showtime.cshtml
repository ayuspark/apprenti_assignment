<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Show Time</title>
	<link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <h1>The Current Time is:</h1>
    @{
        DateTime current = DateTime.Now;
        string date = String.Format("{0:yyyy-M-d dddd}", current);
        string time = String.Format("{0:HH:mm:ss tt}", current);
    }
	<h2>@date</h2>
    <h2>@time</h2>

	<form action="/showtime/survey" method="post">
        <label for="name">
            Name: <br>
            <input type="text" name="name">
        </label>
        <label for="location">
            Location:<br>
            <select name="location">
                <option value="Seattle">Seattle</option>
                <option value="NYC">NYC</option>
                <option value="Shanghai" selected>Shanghai</option>
            </select>
        </label>
        <label for="lang">
            Languages:
            <br>
            <select name="lang">
                <option value="Python">Python</option>
                <option value="C#">C#</option>
                <option value="Ruby" autofocus>Ruby</option>
            </select>
        </label>
        <label for="comment">
			Comment: <br>
           <textarea name="comment" cols="30" rows="10"></textarea>
        </label>
		<input type="submit" value="Go">
    </form>

	<h2>Info from the form: </h2>
    <h3>Name: <p>@ViewBag.name</p></h3>
    <h3>Location: <p>@ViewBag.location</p></h3>
    <h3>Language: <p>@ViewBag.lang</p></h3>
    <h3>Comment: <p>@ViewBag.comment</p></h3>
	        
</body>
</html>